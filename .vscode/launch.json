    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell cmdlets: Windows PowerShell",
            "type": "clr",
            "request": "launch",
            //"preLaunchTask": "build",
            "program": "powershell",
            "args": [
                "-NoExit",
                "-NoProfile",
                "-Command",
                "Import-Module ${workspaceFolder}/bin/Debug/netstandard2.0/WindowsUtils.psd1"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "PowerShell cmdlets: PowerShell Core",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "pwsh",
            "args": [
                "-NoExit",
                "-NoProfile",
                "-Command",
                "Import-Module ${workspaceFolder}/bin/x64/Debug/netstandard2.0/WindowsUtils.psd1"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}