{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/WindowsUtils.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "pwsh",
            "type": "shell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "./Build.ps1 -Local"
            ],
            "options": {},
            "problemMatcher": []
        }
    ]
}